@model IEnumerable<Game>


@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h1>hi</h1>
            <p style="text-align:justify">
                Are you a passionate gamer looking for thrilling adventures, intense competition, and endless entertainment? Look no further! Our Games Website is your ultimate destination for all things gaming.

                At our website, we strive to bring you the latest and greatest games from various genres, platforms, and developers. Whether you're into action-packed shooters, immersive role-playing games, mind-bending puzzles, or captivating story-driven narratives, we have something for every type of gamer.


            </p>
        </div>
        <div class="col-lg-6">
            <img src="\assets\images\Online games addiction-pana.png" style="width: 70%" class="img-fluid">
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No games!</h4>
        <p class="mb-0">No games were added yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach(var game in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card border-success mb-3 text-decoration-none rounded-3 overflow-hidden" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                    <div class="card-body" style="background-image: url(@($"{FileSetting.ImagesPath}/{game.Cover}")); background-size: cover; background-position: center; height: 400px;">
                       <div class="d-flex align-items-end h-100">
                            <span class="badge bg-secondary rounded-0 fs-5">@game.Category?.Name</span>
                       </div>
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h5>@game.Name</h5>
                        <div>
                            @foreach(var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.Device.Icon me-2 fs-4"></i>
                            }
                        </div>
                    </div>
               </a>
            </div>
        }
    </div>   
}
